<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activity.ContestDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:id="@+id/contest_detail_platform"
        android:gravity="center"
        android:fontFamily="@font/cerebri_sans_bold"
        android:text="CODECHEF"
        android:textColor="@color/colorAccent"
        />
        <ImageView
            android:layout_width="175dp"
            android:layout_marginTop="20dp"
            android:id="@+id/contest_detail_platform_image"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_codechef"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contest_detail_contest_name"
            android:maxLines="5"
            android:text="October Long Challenge 2020"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="@font/cerebri_sans_bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:fontFamily="@font/cerebri_sans_bold"
            android:id="@+id/contest_detail_timings_tv"
            android:text="TIME"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:id="@+id/contest_detail_timings"
            android:fontFamily="@font/cerebri_sans_regular"
            android:text="16:35 - 18:35"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:fontFamily="@font/cerebri_sans_bold"
            android:text="DATE"
            android:id="@+id/contest_detail_date_tv"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:id="@+id/contest_detail_date"
            android:textSize="20sp"
            android:fontFamily="@font/cerebri_sans_regular"
            android:text="30/12/20 - 31/12/20"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="You will be notified 1 hour before the contest"
        android:id="@+id/contest_detail_notified_tv"
        android:layout_marginBottom="20dp"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:fontFamily="@font/cerebri_sans_regular"

        />
</androidx.constraintlayout.widget.ConstraintLayout>